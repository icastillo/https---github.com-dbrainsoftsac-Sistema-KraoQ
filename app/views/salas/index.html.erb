<p id="notice"><%= notice %></p>

<h1>Listing Salas</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Local</th>
      <th>No sala</th>
      <th>Qt capacidad</th>
      <th>Tx sala descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salas.each do |sala| %>
      <tr>
        <td><%= sala.Local.no_local %></td>
        <td><%= sala.no_sala %></td>
        <td><%= sala.qt_capacidad %></td>
        <td><%= sala.tx_sala_descripcion %></td>
        <td><%= link_to 'Show', sala %></td>
        <td><%= link_to 'Edit', edit_sala_path(sala) %></td>
        <td><%= link_to 'Destroy', sala, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

