<%= simple_form_for(@sala) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs"> 

      <%= f.collection_select :Local_id, Local.order(:no_local), :id, :no_local, {prompt: "Selecione un local"}, {class: "form-control"} %>


    <%= f.input :no_sala %>
    <%= f.input :qt_capacidad %>
    <%= f.input :tx_sala_descripcion %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
