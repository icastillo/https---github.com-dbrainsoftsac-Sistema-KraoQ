<p id="notice"><%= notice %></p>

<h1>Listing Locals</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>No local</th>
      <th>Tx direccion</th>
      <th>Tx telefono</th>
      <th>Tx correo</th>
      <th>Tx descripcion</th>
      <th>Co administrador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locals.each do |local| %>
      <tr>
        <td><%= local.no_local %></td>
        <td><%= local.tx_direccion %></td>
        <td><%= local.tx_telefono %></td>
        <td><%= local.tx_correo %></td>
        <td><%= local.tx_descripcion %></td>
        <td><%= local.co_administrador %></td>
        <td><%= link_to 'Show', local %></td>
        <td><%= link_to 'Edit', edit_local_path(local) %></td>
        <td><%= link_to 'Destroy', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

